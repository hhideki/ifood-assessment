<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="KeyPad" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="KeyPad.Operator">
        <item name="android:foreground">#1aaf</item>
    </style>

    <style name="KeyPad.Clear">
        <item name="android:foreground">#5f66</item>
    </style>

    <style name="Display" parent="Widget.AppCompat.TextView">
        <item name="android:background">#2fff</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textSize">48sp</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>